<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ModuloDosFirabase" parent="Theme.ModuloDosFirabase.Base">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baseGrey</item>
        <item name="colorPrimaryVariant">@color/lightGrey</item>
        <item name="colorOnPrimary">@color/baseLight</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baseLight</item>
        <item name="colorSecondaryVariant">@color/lightLight</item>
        <item name="colorOnSecondary">@color/baseGrey</item>

        <!--Surface Color -->
        <item name="colorSurface">?attr/colorSecondary</item>
        <item name="colorOnSurface">?attr/colorOnSecondary</item>

        <!-- Customize your theme here. -->
    </style>
</resources>